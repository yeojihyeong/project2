<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
	
	<definition name="ogani/*/*" template="/WEB-INF/tiles/ogani/layout.jsp">
		<put-attribute name="title" value="MyWeb"/>
		<put-attribute name="header" value="/WEB-INF/tiles/ogani/header.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/ogani/{1}/{2}.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/tiles/ogani/footer.jsp"/>
	</definition>
	
	<definition name="admin/*/*" template="/WEB-INF/tiles/admin/layout.jsp">
		<put-attribute name="title" value="Management"/>
		<put-attribute name="side" value="/WEB-INF/tiles/admin/side.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}/{2}.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/tiles/admin/footer.jsp"/>
	</definition>
	
		<definition name="blog/*/*" template="/WEB-INF/tiles/blog/layout.jsp">
		<put-attribute name="title" value="MyBlog"/>
		<put-attribute name="nav" value="/WEB-INF/tiles/blog/nav.jsp"/>
		<put-attribute name="header" value="/WEB-INF/tiles/blog/header.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/blog/{1}/{2}.jsp"/>
		<put-attribute name="side" value="/WEB-INF/tiles/blog/side.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/tiles/blog/footer.jsp"/>
	</definition>
</tiles-definitions>