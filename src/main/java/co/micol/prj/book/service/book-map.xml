<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.micol.prj.book.service.BookMapper">
	<select id="bookSelectList"
		resultType="co.micol.prj.book.service.BookVO">
		SELECT * FROM BOOK
	</select>

	<select id="bookSearch" resultType="co.micol.prj.book.service.BookVO">
		SELECT * FROM BOOK
		WHERE BOOK_ISBN = #{book_isbn}

	</select>

	<insert id="bookInsert"
		parameterType="co.micol.prj.book.service.BookVO">
		INSERT INTO BOOK(BOOK_ISBN, BOO_KNAME, BOOK_CONTENT, BOOK_WRITE, BOOK_PAGE, BOOK_PUBLIS, BOOK_PICTURE, BOOK_PFILE, BOOK_CHEONGGU)
		VALUES(#{book_isbn}, #{book_name}, #{book_content}, #{book_write}, #{book_page}, #{book_publis}, #{book_picture}, #{book_pfile}, #{book_bookcheonggu})
	</insert>

	<delete id="bookDelete"
		parameterType="co.micol.prj.book.service.BookVO">
		DELETE BOOK WHERE BOOK_ISBN = #{book_isbn}
		
		</delete>

	<update id="bookUpdate"
		parameterType="co.micol.prj.book.service.BookVO"></update>

</mapper>